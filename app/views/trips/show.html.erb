<% content_for :title, @trip.title %>

<div class="row align-items-center">
  <!-- Trip Image Section (Carousel) -->
  <div class="col-md-6 text-center">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @trip.images.each_with_index do |image, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= image_tag image, class: "d-block w-100", alt: "Trip Image #{index + 1}" %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <!-- Trip Details -->
  <div class="col-md-6">
    <h3 class="trip-title mt-3 text-center display-3"><%= @trip.title %></h3>
    <%= render 'shared/early_access_badge', item: @trip %>
    <p class="fs-3"><i class="fas fa-calendar-alt"></i> <strong>:</strong>
      <%= @trip.start_date.strftime("%B %d, %Y %I:%M %p") %> - <%= @trip.end_date.strftime("%B %d, %Y %I:%M %p") %>
    </p>
    <p class="fs-3"><i class="fas fa-map-marker-alt"></i> <strong>:</strong> <%= @trip.location %></p>
    <p class="fs-3"><i class="fa-solid fa-money-bill"></i> <strong>:</strong>
      <%= @trip.cost.present? && @trip.cost > 0 ? number_to_currency(@trip.cost) : "Free" %>
    </p>

    <div class="trip-description">
      <h5 class="fs-2"><i class="fas fa-info-circle"></i> Description</h5>
      <p class="fs-3"><%= @trip.description %></p>
      <p class="fs-3"><i class="fa-solid fa-users"></i> <strong>Registration Limit:</strong> <%= @trip.capacity %></p>
      <% if @trip.childcare.present? %>
        <p class="fs-3"><i class="fa-solid fa-child-reaching"></i> <strong>Childcare Available</strong></p>
      <% end %>
      <% if @trip.sponsors.present? %>
        <p class="fs-3"><strong>Sponsor(s):</strong> <%= @trip.sponsors %></p>
      <% end %>
      <p class="fs-3"><strong>RSVP Deadline:</strong> <%= @trip.rsvp_deadline.strftime("%B %d, %Y %I:%M %p") %></p>

      <% if @trip.capacity.present? && @trip.registrations.count >= @trip.capacity %>
        <div class="btn btn-outline-primary" style="pointer-events: none;">SOLD OUT</div>
      <% end %>
    </div>

    <%= render 'shared/registration_status_actions', registrable: @trip %>
  </div>
</div>
