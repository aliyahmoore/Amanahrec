<%= stylesheet_link_tag 'media_mentions', media: 'all' %>

<h1 class="heading text-center my-5" style="color: #403f2b;">Amanah Rec Latest News...</h1>

<div class="text-center mt-4">
  <%= link_to 'Create New Post', new_media_mention_path, class: 'btn btn-sm create-post-button text-decoration-none' %>
</div>

<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-2">
    <% if @media_mentions.present? %>
      <% @media_mentions.each do |media_mention| %>
        <div class="col">
          <div class="card custom-card">
            <div class="card-body">
              <h5 class="card-title"><%= media_mention.name %></h5>
              <p class="card-text"><strong>News Organization:</strong> <%= media_mention.organization_name %></p>
              <p class="card-text"><strong>Published Date:</strong> <%= media_mention.published_date.strftime("%B %d, %Y") %></p>

              <% if media_mention.link.present? %>
                <iframe 
                  src="<%= media_mention.link %>" 
                  title="<%= media_mention.name %> Article Snippet" 
                  width="100%" 
                  height="200" 
                  frameborder="0" 
                  style="border: 1px solid #ccc; border-radius: 8px;">
                </iframe>
              <% else %>
                <p class="text-muted">No preview available.</p>
              <% end %>

              <a href="<%= media_mention.link %>" target="_blank" class="btn btn-primary mt-3">View Full Article</a>

              <div class="mt-3 d-flex justify-content-between">
                <%= link_to 'Edit Post', edit_media_mention_path(media_mention), class: 'btn btn-sm edit-button' %>
                <%= button_to 'Delete', media_mention_path(media_mention), method: :delete, class: 'btn btn-sm delete-button' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-muted fs-5">No Updates Available At This Time.</p>
    <% end %>
  </div>
</div>
