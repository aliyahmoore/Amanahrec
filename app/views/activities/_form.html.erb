<%= form_with(model: @activity, local: true, html: { class: 'activity-form', data: { turbo: false } }) do |form| %>
  <!-- Error Messages -->
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% @activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Activity Details Section -->
  <div class="form-section">
    <h3>Activity Details</h3>
    <div class="field">
      <%= form.label :title %><span class="required">*</span>
      <%= form.text_field :title, class: "input-field" %>
    </div>

    <div class="field">
      <%= form.label :description %><span class="required">*</span>
      <%= form.text_area :description, class: "input-field" %>
    </div>

    <div class="row">
    <!-- Start Date and End Date on one line -->
    <div class="col-md-6">
      <%= form.label :start_date, "Start Date", class: "form-label" %>
      <%= form.datetime_local_field :start_date, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= form.label :end_date, "End Date", class: "form-label" %>
      <%= form.datetime_local_field :end_date, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :location %><span class="required">*</span>
      <%= form.text_field :location, class: "input-field" %>
    </div>

    <div class="field">
      <%= form.label :rules %><span class="required">*</span>
      <%= form.text_area :rules, class: "input-field" %>
    </div>

    <div class="field">
      <%= form.label :notes %><span class="required">*</span>
      <%= form.text_area :notes, class: "input-field" %>
    </div>
  </div>

  <!-- Recurrence Section -->
  <div class="form-section">
    <h3>Recurrence</h3>
    <div class="field">
      <%= form.label :recurrence_pattern, "Recurring Event?" %><span class="required">*</span>
      <%= form.select :recurrence_pattern, options_for_select([['None', nil], ['Daily', 'daily'], ['Weekly', 'weekly']], @activity.recurrence_pattern || 'none'), {}, class: "input-field", id: "activity_recurrence_pattern" %>
    </div>

    <!-- Recurrence Days Checkboxes -->
    <div class="field" id="recurrence_days_field" style="<%= 'display:none' if @activity.recurrence_pattern != 'weekly' %>">
      <%= form.label :recurrence_days, "Recurrence Days (Select days)" %>
      <div class="checkbox-container">
        <% %w[monday tuesday wednesday thursday friday saturday sunday].each do |day| %>
          <div class="checkbox-item">
            <%= check_box_tag "activity[recurrence_days][]", day, @activity.recurrence_days.to_s.include?(day) %>
            <%= form.label "recurrence_days_#{day}", day.capitalize %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Registration Section -->
  <div class="form-section">


    <h3>Registration</h3>

    <div class="row">
    <div class="col-md-6">
      <%= form.label :general_registration_start, "General Registration Start Date" %><span class="required">*</span>
      <%= form.datetime_local_field :general_registration_start, class: "input-field", required: true, placeholder: "Select the date when general registration starts" %>
    </div>

   <div class="col-md-6">
      <%= form.label :capacity %><span class="required">*</span>
      <%= form.number_field :capacity, class: "input-field" %>
    </div>
    </div>

 <div class="row">
    <div class="col-md-6">
      <%= form.label :early_access_for_members, "Enable Early Access for Members", class: "form-check-label" %>
      <%= form.check_box :early_access_for_members, {}, "true", "false" %>
    </div>

     <div class="col-md-6">
      <%= form.label :early_access_days, "Number of Days for Member Early Access" %>
      <%= form.number_field :early_access_days, class: "input-field", min: 0, placeholder: "Enter number of days for early access" %>
    </div>
  </div>

  <!-- Cost Section -->
  <div class="form-section">
    <h3>Cost</h3>
    <div class="field">
      <%= form.label :cost, "Cost" %><span class="required">*</span>
      <%= form.number_field :cost, value: @activity.cost.nil? ? 0 : @activity.cost, class: "input-field", step: "0.01", min: "0", placeholder: "Enter the event cost (0 for free)" %>
    </div>
  </div>

  <!-- Image Upload Section -->
  <div class="form-section">
    <h3>Upload Image</h3>
    <div class="field">
      <%= form.file_field :images, multiple: true, class: "input-field" %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= form.submit "Save Activity", class: "submit-button" %>
  </div>
<% end %>

<!-- JavaScript for Recurrence Logic -->
<% content_for :javascript do %>
  <script type="module">
    import "recurring_activities";
  </script>
<% end %>