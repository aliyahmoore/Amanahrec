<%= form_with(model: @activity, local: true, html: { class: 'activity-form', data: { turbo: false } }) do |form| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% @activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Activity Details Section -->
  <div class="form-section">
    <h3>Activity Details</h3>
    <div class="field">
      <%= form.label :title %><span class="required">*</span>
      <%= form.text_field :title, class: "input-field" %>
    </div>

    <div class="field">
      <%= form.label :description %><span class="required">*</span>
      <%= form.text_area :description, class: "input-field" %>
    </div>

    <div class="field">
      <%= form.label :start_date %><span class="required">*</span>
      <%= form.datetime_local_field :start_date, class: "input-field" %>
    </div>

        <div class="field">
      <%= form.label :end_date %><span class="required">*</span>
      <%= form.datetime_local_field :end_date, class: "input-field" %>
    </div>
  </div>

  <!-- Recurrence Section -->
  <div class="form-section">
    <h3>Recurrence</h3>
    <div class="field">    
      <%= form.label :recurrence_pattern, "Recurring Event?" %><span class="required">*</span>
      <%= form.select :recurrence_pattern, options_for_select([['None', nil], ['Daily', 'daily'], ['Weekly', 'weekly']], @activity.recurrence_pattern || 'none'), {}, class: "input-field", id: "activity_recurrence_pattern" %>
    </div>

    <!-- Recurrence Days Checkboxes -->
    <div class="field" id="recurrence_days_field" style="<%= 'display:none' if @activity.recurrence_pattern != 'weekly' %>">
    <%= form.label :recurrence_days, "Recurrence Days (Select days)" %>
    <div class="checkbox-container">
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "monday", @activity.recurrence_days.to_s.include?("monday") %>
        <%= form.label :recurrence_days_monday, "Monday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "tuesday", @activity.recurrence_days.to_s.include?("tuesday") %>
        <%= form.label :recurrence_days_tuesday, "Tuesday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "wednesday", @activity.recurrence_days.to_s.include?("wednesday") %>
        <%= form.label :recurrence_days_wednesday, "Wednesday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "thursday", @activity.recurrence_days.to_s.include?("thursday") %>
        <%= form.label :recurrence_days_thursday, "Thursday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "friday", @activity.recurrence_days.to_s.include?("friday") %>
        <%= form.label :recurrence_days_friday, "Friday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "saturday", @activity.recurrence_days.to_s.include?("saturday") %>
        <%= form.label :recurrence_days_saturday, "Saturday" %>
      </div>
      <div class="checkbox-item">
        <%= check_box_tag "activity[recurrence_days][]", "sunday", @activity.recurrence_days.to_s.include?("sunday") %>
        <%= form.label :recurrence_days_sunday, "Sunday" %>
      </div>
    </div>
  </div>


  <div class="field">
    <%= form.label :location %><span class="required">*</span>
    <%= form.text_field :location, class: "input-field" %>
  </div>

    <div class="field">
      <%= form.label :capacity %><span class="required">*</span>
      <%= form.number_field :capacity, class: "input-field" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :rules %><span class="required">*</span>
    <%= form.text_area :rules, class: "input-field" %>
  </div>

  <div class="field">
    <%= form.label :notes %><span class="required">*</span>
    <%= form.text_area :notes, class: "input-field" %>
  </div>
  
  <div class="form-group">
  <%= form.label :general_registration_start, "General Registration Start Date" %>
  <%= form.datetime_local_field :general_registration_start, class: "form-control", required: true, placeholder: "Select the date when general registration starts" %>
  </div>
  <!-- Early Access Info -->
    <div class="form-group">
    <%= form.label :early_access_for_members, "Enable Early Access for Members" %>
    <%= form.check_box :early_access_for_members, class: "form-check-input" %>
  </div>

  <div class="form-group">
    <%= form.label :early_access_days, "Number of Days for Member Early Access" %>
    <%= form.number_field :early_access_days, class: "form-control", min: 0, placeholder: "Enter number of days for early access" %>
  </div>

  <div class="form-group">
  <%= form.label :cost, "Cost" %><span class="required">*</span>
  <%= form.number_field :cost, 
      value: @activity.cost.nil? ? 0 : @activity.cost, 
      class: 'form-control', 
      step: "0.01", 
      min: "0", 
      placeholder: "Enter the event cost (0 for free)" %>
  </div>
  <!-- Image Upload Section -->
  <div class="form-section">
    <h3>Upload Image</h3>
    <div class="field">
      <%= form.file_field :image, class: "form-control" %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= form.submit "Save Activity", class: "submit-button" %>
  </div>
<% end %>

<% content_for :javascript do %>
  <script type="module">
    import "recurring_activities";  
  </script>
<% end %>
