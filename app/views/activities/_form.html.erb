<%= form_with(model: @activity, local: true, html: { class: 'activity-form', data: { turbo: false } }) do |form| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% @activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <!-- Title Field -->
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, class: 'form-label' %><span class="text-danger">*</span>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the title of the activity" %>
      </div>
    </div>

    <!-- Location Field -->
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :location, class: 'form-label' %><span class="text-danger">*</span>
        <%= form.text_field :location, class: "form-control", placeholder: "Enter the location of the activity" %>
      </div>
    </div>
  </div>

  <!-- Description Field -->
  <div class="form-group mb-3">
    <%= form.label :description, class: 'form-label' %><span class="text-danger">*</span>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Provide a brief description of the activity" %>
  </div>

  <!-- Date Field -->
  <div class="form-group mb-3">
    <%= form.label :date, class: 'form-label' %><span class="text-danger">*</span>
    <%= form.datetime_local_field :date, class: "form-control", placeholder: "Select the date and time of the activity" %>
  </div>

  <div class="row mb-3">
    <!-- Capacity Field -->
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :capacity, class: 'form-label' %><span class="text-danger">*</span>
        <%= form.number_field :capacity, class: "form-control", placeholder: "Enter the maximum capacity" %>
      </div>
    </div>

    <!-- Cost Field -->
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :cost, "Cost", class: 'form-label' %><span class="text-danger">*</span>
        <%= form.number_field :cost, 
            value: @activity.cost.nil? ? 0 : @activity.cost, 
            class: 'form-control', 
            step: "0.01", 
            min: "0", 
            placeholder: "Enter the event cost (0 for free)" %>
      </div>
    </div>

    <!-- Duration Field -->
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :duration, "Duration (hours)", class: 'form-label' %><span class="text-danger">*</span>
        <%= form.number_field :duration, class: "form-control", step: "0.1", min: "0", placeholder: "Enter the duration in hours" %>
      </div>
    </div>
  </div>

  <!-- What to Bring Field -->
  <div class="form-group mb-3">
    <%= form.label :what_to_bring, class: 'form-label' %><span class="text-danger">*</span>
    <%= form.text_area :what_to_bring, class: "form-control", rows: 3, placeholder: "What should attendees bring?" %>
  </div>

  <!-- Rules Field -->
  <div class="form-group mb-3">
    <%= form.label :rules, class: 'form-label' %><span class="text-danger">*</span>
    <%= form.text_area :rules, class: "form-control", rows: 3, placeholder: "Specify any rules for the activity" %>
  </div>

  <!-- Notes Field -->
  <div class="form-group mb-3">
    <%= form.label :notes, class: 'form-label' %><span class="text-danger">*</span>
    <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "Additional notes for attendees" %>
  </div>

  <!-- Image upload section -->
  <div class="form-group mb-3">
    <%= form.label :images, "Upload Images", class: 'form-label' %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <!-- Submit Button -->
  <div class="form-group">
    <%= form.submit "Save Activity", class: "btn btn-primary" %>
  </div>
<% end %>
