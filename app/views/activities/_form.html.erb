<% content_for :javascript do %>
  <script type="module">
    import "recurring_activities";
  </script>
<% end %>

<%= form_with(model: @activity, local: true, html: { class: 'activity-form', data: { turbo: false } }) do |form| %>
  <!-- Error Messages -->
  <% if @activity.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% @activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Activity Details Section -->
  <div class="form-section mb-4">
    <h3>Activity Details</h3>
    <div class="row">
      <div class="col-md-3">
        <%= form.label :title, class: "form-label" %><span class="required">*</span>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.label :location, class: "form-label" %><span class="required">*</span>
        <%= form.text_field :location, class: "form-control" %>
      </div>

            <div class="col-md-2">
        <%= form.label :start_date, "Start Date", class: "form-label" %>
        <%= form.datetime_local_field :start_date, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= form.label :end_date, "End Date", class: "form-label" %>
        <%= form.datetime_local_field :end_date, class: "form-control" %>
      </div>

       <div class="col-md-1">
      <%= form.label :cost, "Cost ($)", class: "form-label" %>
      <%= form.number_field :cost, value: @activity.cost.nil? ? 0 : @activity.cost, class: "form-control", step: "0.01", min: "0" %>
    </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-4">
        <%= form.label :description, class: "form-label" %><span class="required">*</span>
        <%= form.text_area :description, class: "form-control", rows: 3 %>
      </div>
      <div class="col-md-4">
        <%= form.label :rules, class: "form-label" %><span class="required">*</span>
        <%= form.text_area :rules, class: "form-control", rows: 3 %>
      </div>

       <div class="col-md-4">
        <%= form.label :notes, class: "form-label" %><span class="required">*</span>
        <%= form.text_area :notes, class: "form-control", rows: 3 %>
      </div>
    </div>
  </div>

  <!-- Recurrence Section -->
  <div class="form-section mb-4">
    <h3>Recurrence</h3>
    <div class="row">
      <div class="col-md-6">
        <%= form.label :recurrence_pattern, "Recurring Event?", class: "form-label" %><span class="required">*</span>
        <%= form.select :recurrence_pattern, options_for_select([['None', nil], ['Daily', 'daily'], ['Weekly', 'weekly']], @activity.recurrence_pattern || 'none'), {}, class: "form-select", id: "activity_recurrence_pattern" %>
      </div>
      <div class="col-md-6" id="recurrence_days_field" style="<%= 'display:none' if @activity.recurrence_pattern != 'weekly' %>">
        <%= form.label :recurrence_days, "Recurrence Days (Select days)", class: "form-label" %>
        <div class="checkbox-container">
          <% %w[monday tuesday wednesday thursday friday saturday sunday].each do |day| %>
            <div class="form-check form-check-inline">
              <%= check_box_tag "activity[recurrence_days][]", day, @activity.recurrence_days.to_s.include?(day), class: "form-check-input" %>
              <%= form.label "recurrence_days_#{day}", day.capitalize, class: "form-check-label" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Registration Section -->
  <div class="form-section mb-4">
    <h3>Registration</h3>
    <div class="row">
      <div class="col-md-3">
        <%= form.label :general_registration_start, "General Registration Start Date", class: "form-label" %><span class="required">*</span>
        <%= form.datetime_local_field :general_registration_start, class: "form-control", required: true %>
      </div>
      <div class="col-md-3">
        <%= form.label :capacity, class: "form-label" %><span class="required">*</span>
        <%= form.number_field :capacity, class: "form-control" %>
      </div>

      <div class="col-md-2">
        <div class="form-check">
          <%= form.check_box :early_access_for_members, class: "form-check-input" %>
          <%= form.label :early_access_for_members, "Enable Early Access for Members", class: "form-check-label" %>
        </div>
      </div>
       <div class="col-md-3">
        <%= form.label :early_access_days, "Number of Days for Member Early Access", class: "form-label" %>
        <%= form.number_field :early_access_days, class: "form-control", min: 0 %>
      </div>
    </div>
     
    </div>
  </div>

<div class="col-md-3">
      <h3>Upload an Image</h3>
      <%= form.file_field :image, class: "form-control" %>
    </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= form.submit "Save Activity", class: "btn btn-primary" %>
  </div>
<% end %>