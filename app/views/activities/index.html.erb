<div class="activities-index-container">
  <h1 class="page-title">Activities</h1>

  <%= link_to 'New Activity', new_activity_path, class: 'btn btn-primary mb-3' %>

  <table class="table activity-table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Location</th>
        <th>Date</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= link_to activity.title, activity_path(activity), class: 'activity-title' %></td>
          <td><%= activity.description.truncate(100) %></td>
          <td><%= activity.location %></td>
          <td><%= activity.date.strftime("%B %d, %Y") %></td>
          <td><%= activity.time.strftime("%I:%M %p") %></td>
          <td>
            <%= link_to 'Edit', edit_activity_path(activity), class: 'btn btn-warning btn-sm' %> |
            <%= link_to 'Delete', activity_path(activity), method: :delete, data: { confirm: 'Are you sure you want to delete this activity?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
