<% content_for :title, "Activities & Events" %>
<h1 class="my-3 text-center">Activities & Events</h1>
<!-- Tab Navigation -->
<div class="d-flex justify-content-center">
  <ul class="nav nav-underline" id="activity-tabs">
    <li class="nav-item">
      <a class="nav-link active" id="current-tab" data-bs-toggle="tab" href="#current">Upcoming</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="past-tab" data-bs-toggle="tab" href="#past">Past</a>
    </li>
  </ul>
</div>
<!-- Tab Content -->
<div class="tab-content" id="activity-tabs-content">
  <!-- Current Activities Tab -->
  <div class="tab-pane fade show active" id="current">
    <div class="row d-flex justify-content-center g-3 row-cols-1 row-cols-lg-3 row-cols-xl-4 mt-2">
      <% @current_activities.each do |activity| %>
        <%= render 'shared/item_card', item: activity %>
      <% end %>
    </div>
  </div>
  <!-- Past Activities Tab -->
  <div class="tab-pane fade" id="past">
    <div class="row d-flex justify-content-center g-3 row-cols-2 row-cols-lg-3 row-cols-xl-4 mt-5">
      <% @past_activities.each do |activity| %>
        <%= render 'shared/item_card', item: activity %>
      <% end %>
    </div>
  </div>
</div>
