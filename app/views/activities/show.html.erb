<% content_for :title, @activity.title %>
<div class="row align-items-center">
  <!-- Activity Image Section -->
  <div class="col-md-6 text-center">
    <% if @activity.image.attached? %>
      <%= image_tag @activity.image, class: "img-fluid" %>
    <% else %>
      <p>No image uploaded for this activity.</p>
    <% end %>
  </div>
  <!-- Activity Details -->
  <div class="col-md-6">
    <h3 class="activity-title mt-3 text-center display-3 "><%= @activity.title %></h3>
    <%= render 'shared/early_access_badge', item: @activity %>
    <%= render 'shared/item_details', item: @activity %>
    <div class="activity-description">
      <h5 class="fs-2"><i class="fas fa-info-circle"></i> Description</h5>
      <p><%= simple_format(@activity.description) %></p>
      <p><i class="fa-solid fa-users"></i><strong> Registration Limit:</strong> <%= @activity.capacity %></p>
      <% if @activity.what_to_bring.present? %>
        <p><i class="fas fa-suitcase"></i> <strong>What to Bring:</strong> <%= simple_format(@activity.what_to_bring) %></p>
      <% end %>
      <% if @activity.rules.present? %>
        <p><i class="fas fa-exclamation-triangle"></i> <strong>Rules:</strong> <%= simple_format(@activity.rules) %></p>
      <% end %>
      <%= render 'shared/registration_status_actions', item: @activity %>
    </div>
  </div>
</div>
