<% content_for :title, @activity.title %>

<div class="row align-items-center">
    <!-- Activity Image Section -->
    <div class="col-md-6 text-center">
      <% if @activity.image.attached? %>
        <%= image_tag @activity.image, class: "img-fluid" %>
      <% else %>
        <p>No image uploaded for this activity.</p>
      <% end %>
    </div>

    <!-- Activity Details -->
    <div class="col-md-6">
    <h3 class="activity-title mt-3 text-center display-3 "><%= @activity.title %></h3>
      <%= render 'shared/early_access_badge', item: @activity %>
      <p class="fs-3"><i class="fas fa-calendar-alt"></i> <strong>:</strong> <%= @activity.start_date.strftime("%B %d, %Y") %> 
        <%= @activity.start_date.strftime("%I:%M %p") %> - <%= @activity.end_date.strftime("%I:%M %p") %>
      </p>
      <p class="fs-3"><i class="fas fa-map-marker-alt"></i> <strong>:</strong> <%= @activity.location %></p>
      <p class="fs-3"><i class="fa-solid fa-money-bill"></i> <strong>:</strong> <%= @activity.cost.present? && @activity.cost > 0 ? number_to_currency(@activity.cost) : "Free" %></p>
      
      <div class="activity-description">
        <h5 class="fs-2"><i class="fas fa-info-circle"></i> Description</h5>
        <p class="fs-3"><%= @activity.description %></p>
        <p class="fs-3"><i class="fa-solid fa-users"></i><strong> Registration Limit:</strong> <%= @activity.capacity %></p>
        <% if @activity.what_to_bring.present? %>
          <p class="fs-3"><i class="fas fa-suitcase"></i> <strong>What to Bring:</strong> <%= @activity.what_to_bring %></p>
        <% end %>
        <% if @activity.rules.present? %>
          <p class="fs-3"><i class="fas fa-exclamation-triangle"></i> <strong>Rules:</strong> <%= @activity.rules %></p>
        <% end %>

        <%= render 'shared/registration_status_actions', registrable: @activity %>
        <% if @activity.registrations.count >= @activity.capacity %>
          <div class="btn btn-outline-primary" style="pointer-events: none;">SOLD OUT</div>
        <% end %>
      </div>
    </div>
  </div>