<h1>My Registrations</h1>

<!-- Grouping Events -->
<h3>Registered Events</h3>
<div class="registrations-section events">
  <% @registrations.each do |registration| %>
    <% if registration.registrable_type == "Event" && registration.registrable.present? %>
      <div class="registration-card">
        <strong><%= registration.registrable.title %></strong><br>
        <%= registration.registrable.start_date.strftime("%B %d, %Y") %><br>
        <%= registration.registrable.location %><br>
        <p>Status: <%= registration.status.capitalize %></p>
        <%= link_to 'View Event', event_path(registration.registrable), class: 'btn btn-info' %>
      </div>
      <hr>
    <% end %>
  <% end %>
</div>

<!-- Grouping Activities -->
<h3>Registered Activities</h3>
<div class="registrations-section activities">
  <% @registrations.each do |registration| %>
    <% if registration.registrable_type == "Activity" && registration.registrable.present? %>
      <div class="registration-card">
        <strong><%= registration.registrable.title %></strong><br>
        <%= registration.registrable.date.strftime("%B %d, %Y") %><br>
        <%= registration.registrable.location %><br>
        <p>Status: <%= registration.status.capitalize %></p>
        <%= link_to 'View Activity', activity_path(registration.registrable), class: 'btn btn-info' %>
      </div>
      <hr>
    <% end %>
  <% end %>
</div>
