<% if item.early_access_for_members? && Time.current < item.general_registration_start %>
  <div class="text-center mb-2">
    <span class="badge bg-warning text-dark fs-5">
      <i class="fas fa-gem"></i> Member Early Access
    </span>
  </div>
<% elsif item.general_registration_start && Time.current >= item.general_registration_start %>
  <div class="text-center mb-2">
    <span class="badge bg-secondary fs-5" style="pointer-trips: none; opacity: 0.6;">
      <i class="fas fa-gem"></i> Member Early Access 
    </span>
  </div>
<% end %>
