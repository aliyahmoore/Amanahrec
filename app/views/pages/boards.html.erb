<% content_for :title, "Boards" %>
<h1 class= "mt-3 text-center my-3">Our Board Members</h1>
<div class="row row-cols-3 row-cols-xl-4  row-cols-xxl-5 g-4 mb-3">
  <% @boards.each do |board| %>
    <div class="col">
      <div class="card h-100">
        <% if board.image.attached? %>
          <%= image_tag board.image.variant(resize_to_fill: [300, 300]), class: "card-img-top", alt: board.name %>
        <% else %>
          <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Default Image">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= board.name %></h5>
          <p class="card-subtitle text-muted"><%= board.position %></p>
          <p class="card-text"><%= board.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
