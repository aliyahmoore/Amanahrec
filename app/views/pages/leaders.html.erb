<% content_for :title, "Boards" %>
<h1 class= "mt-3 text-center my-3">Board Members</h1>
<div class="row row-cols-3 row-cols-xl-4  row-cols-xxl-5 g-4 mb-3">
   <% @board_members.each do |board_member| %>
    <%= render partial: "shared/leader_card", locals: { leader: board_member } %>
  <% end %>
</div>

<h1 class= "mt-3 text-center my-3">Team Members</h1>
<div class="row row-cols-3 row-cols-xl-4  row-cols-xxl-5 g-4 mb-3">
   <% @team_members.each do |team_member| %>
    <%= render partial: "shared/leader_card", locals: { leader: team_member } %>
  <% end %>
</div>
