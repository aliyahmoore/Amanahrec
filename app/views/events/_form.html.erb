<%= form_with(model: @event, local: true, html: { id: 'event_form' }) do |form| %>
  <div class="event-form-container">
    <!-- Display Error Messages -->
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Form Title -->
    <h1><%= @event.new_record? ? 'Create a New Event' : 'Edit Event' %></h1>

    <!-- Event Title and Location on the Same Line -->
    <div class="form-group row">
      <div class="col-md-6">
        <%= form.label :title do %>
          Title <span class="required">*</span>
        <% end %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter event title", required: true %>
      </div>
      <div class="col-md-6">
        <%= form.label :location do %>
          Location <span class="required">*</span>
        <% end %>
        <%= form.text_field :location, class: "form-control", placeholder: "Enter the event location", required: true %>
      </div>
    </div>

    <!-- Event Description -->
    <div class="form-group">
      <%= form.label :description do %>
        Description <span class="required">*</span>
      <% end %>
      <%= form.text_area :description, class: "form-control", placeholder: "Enter a detailed description of the event", required: true %>
    </div>

    <!-- Event Date, End Date, and RSVP Deadline on the Same Line -->
    <div class="form-group row">
      <!-- Start Date -->
      <div class="col-md-4">
        <%= form.label :start_date do %>
          Start Date <span class="required">*</span>
        <% end %>
        <%= form.datetime_local_field :start_date, class: "form-control", required: true %>
      </div>
      
      <!-- End Date -->
      <div class="col-md-4">
        <%= form.label :end_date do %>
          End Date <span class="required">*</span>
        <% end %>
        <%= form.datetime_local_field :end_date, class: "form-control", required: true %>
      </div>

      <!-- RSVP Deadline -->
      <div class="col-md-4">
        <%= form.label :rsvp_deadline do %>
          RSVP Deadline <span class="required">*</span>
        <% end %>
        <%= form.datetime_local_field :rsvp_deadline, class: "form-control", id: "rsvp_deadline", required: true %>
        <div id="rsvp-error-message" style="color: red; display: none;">
          The RSVP deadline cannot be after the event date.
        </div>
      </div>
    </div>

    <!-- Childcare Available, Checkbox, and Cost on the Same Line -->
    <div class="form-group row">
       <!-- Event Sponsors -->
    <div class="col-md-4">
      <%= form.label :sponsors, "Sponsor(s)" %>
      <%= form.text_field :sponsors, class: "form-control", placeholder: "Enter event sponsors" %>
    </div>
      
      <!-- Cost -->
      <div class="col-md-4">
        <%= form.label :cost do %>
          Cost ($) <span class="required">*</span>
        <% end %>
        <%= form.number_field :cost, step: 0.01, min: 0, class: "form-control", placeholder: "Enter the event cost", required: true %>
      </div>
            <!-- Childcare Available -->
      <div class="col-md-4">
        <%= form.label :childcare, "Childcare Available?" %>
        <%= form.check_box :childcare, class: "form-check-input" %>
      </div>
    </div>

    <!-- Multiple image upload -->
    <div>
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true %>
    </div>

    <!-- Submit Button -->
    <div class="form-group text-center">
      <%= form.submit "Save Event", class: "btn btn-primary", id: "submit_btn" %>
    </div>
  </div>

<% end %>
