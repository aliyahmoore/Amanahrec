<% content_for :javascript do %>
  <script type="module">
    import "non_member_alert";
  </script>
<% end %>
<div class="container-fluid">
  <h1 class="page-title text-center">Upcoming Events</h1>
  <!-- Admin Only: Button to Add New Events -->
  <% if current_user&.role_id == 1 %>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
  <% if @events.any? %>
    <div class="row d-flex justify-content-center g-3">
      <% @events.each do |event| %>
        <div class="col-md-6 col-lg-4 d-flex">
          <div class="card mb-4 flex-fill event-card <%= 'member-only' if event.early_access_period? && !current_user&.member? %>">

            <!-- Event Image -->
            <% if event.images.attached? %>
              <%= image_tag event.images.first, class: 'card-img-top event-image', alt: event.title %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= link_to event.title, event_path(event), class: 'text-decoration-none text-primary' %>
              </h5>
              <p class="card-text text-muted">
                <i class="fa-regular fa-calendar me-2"></i>
                <%= event.start_date.strftime("%B %d, %Y %I:%M %p") %>
              </p>
              <p class="card-text">
                <i class="fa-solid fa-location-dot me-2"></i>
                <%= event.location %>
              </p>
              <p class="card-text">
                <i class="fa-sharp-duotone fa-solid fa-money-bill"></i>
                <%= event.cost.present? && event.cost > 0 ? number_to_currency(event.cost) : "Free" %>
              </p>
              <!-- Registration Countdown / Status -->
              <% if event.early_access_for_members && event.general_registration_start %>
                <% if Time.current < event.general_registration_start %>
                  <p><strong>Member Registrations Only. General Registration Opens In:</strong></p>
                  <p id="countdown-<%= event.id %>" 
                     class="countdown" 
                     data-countdown-date="<%= event.general_registration_start %>">
                  </p>
                <% else %>
                  <p><strong>General registration is now open!</strong></p>
                <% end %>
              <% else %>
                <p><strong>General registration is now open!</strong></p>
              <% end %>
              <!-- Alert for Non-Members -->
              <% if event.early_access_period? && !current_user&.member? %>
                <p class="alert-member-only">This event is currently available to members only.</p>
              <% end %>
<div class="mt-auto d-flex justify-content-between">
              <% if current_user&.role_id == 1 %>
              <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No upcoming events at the moment.</p>
  <% end %>
  <%= link_to 'Back to Home', root_path, class: "btn-back" %>
  <%= link_to 'New Event', new_event_path, class: "btn-back" %>

</div>