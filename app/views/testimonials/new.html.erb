<div class="container my-5">
  <h1 class="text-center mb-4" style="color: #57573F;">Submit a Testimonial</h1>
  <div class="card mx-auto p-4 testimonial-new-card">
    <%= form_with model: @testimonial, local: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :text, "Your Testimonial", class: "form-label", style: "color: #57573F;" %>
        <%= f.text_area :text, rows: 5, class: "form-control", style: "border-color: #DACCB1; background-color: #E9E2D8;" %>
      </div>
      <div class="form-actions text-center">
        <%= f.submit "Submit", class: "btn custom-btn-success" %>
        <%= link_to "Cancel", root_path, class: "btn custom-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
