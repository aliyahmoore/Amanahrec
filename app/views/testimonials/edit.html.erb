<div class="container my-5">
  <h1 class="text-center mb-4" style="color: #57573F;">Edit Testimonial</h1>
  <div class="card mx-auto p-4 testimonial-edit-card">
    <%= form_with(model: @testimonial, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :text, "Testimonial", class: "form-label", style: "color: #57573F;" %>
        <%= form.text_area :text, class: "form-control", rows: 5, style: "border-color: #DACCB1; background-color: #E9E2D8;" %>
      </div>
      <div class="form-actions d-flex justify-content-between">
        <%= form.submit "Update Testimonial", class: "btn custom-btn-success" %>
        <%= link_to "Cancel", testimonials_path, class: "btn custom-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
